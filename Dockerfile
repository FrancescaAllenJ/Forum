# ----------------------------------------------------
# 1. Use official Go image
# ----------------------------------------------------
FROM golang:1.22

# ----------------------------------------------------
# 2. Set working directory inside container
# ----------------------------------------------------
WORKDIR /app

# ----------------------------------------------------
# 3. Copy go.mod and go.sum first (caching)
# ----------------------------------------------------
COPY go.mod go.sum ./
RUN go mod download

# ----------------------------------------------------
# 4. Copy project files
# ----------------------------------------------------
COPY . .

# ----------------------------------------------------
# 5. Build the Go binary
# ----------------------------------------------------
RUN go build -o forum .

# ----------------------------------------------------
# 6. Expose port 8080
# ----------------------------------------------------
EXPOSE 8080

# ----------------------------------------------------
# 7. Start the app
# ----------------------------------------------------
CMD ["./forum"]
